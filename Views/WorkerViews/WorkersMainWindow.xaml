<Window x:Class="SmartInventoryTracker.Views.WorkerViews.WorkersMainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SmartInventoryTracker.Views.WorkerViews"
        xmlns:conv="clr-namespace:SmartInventoryTracker.Converters" 
        mc:Ignorable="d"
        Title="WorkersMainWindow" Height="700" MinWidth="800" Background="#181A1B" WindowStartupLocation="CenterScreen">
    <Window.Resources>
        <!-- Stil za bočna dugmad -->
        <Style x:Key="SideMenuButton" TargetType="Button">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Foreground" Value="#F5F6FA"/>
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="HorizontalContentAlignment" Value="Left"/>
            <Setter Property="Padding" Value="15,10"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                CornerRadius="5" Margin="30, 10, 5, 5">
                            <ContentPresenter HorizontalAlignment="Left" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#23272A"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="LowStockButton" TargetType="Button">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Foreground" Value="#F5F6FA"/>
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="HorizontalContentAlignment" Value="Left"/>
            <Setter Property="Padding" Value="15,0"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                        CornerRadius="5" Margin="30, 0, 5, 5">
                            <ContentPresenter HorizontalAlignment="Left" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#181A1B"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="ActionButton" TargetType="Button">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Foreground" Value="#F5F6FA"/>
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="HorizontalContentAlignment" Value="Left"/>
            <Setter Property="Padding" Value="20,10"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="MinWidth" Value="200"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                        CornerRadius="5" Margin="20, 10, 5, 5">
                            <ContentPresenter HorizontalAlignment="Left" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#23272A"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Stil za modernu TextBox pretragu -->
        <Style TargetType="TextBox" x:Key="SearchBox">
            <Setter Property="Background" Value="#23272A"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Padding" Value="10,5"/>
            <Setter Property="BorderThickness" Value="0"/>
        </Style>

        <!-- Stil za DataGrid -->
        <!-- <Style TargetType="DataGrid">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="RowBackground" Value="#23272A"/>
            <Setter Property="AlternatingRowBackground" Value="#97866A"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="GridLinesVisibility" Value="None"/>
        </Style>-->
        <conv:StatusToColorConverter x:Key="StatusToColorConverter"/>

        <!-- DataTemplate za Status kolonu -->
        <DataTemplate x:Key="StatusTemplate">
            <TextBlock Text="{Binding Status}" 
                   Foreground="{Binding Status, Converter={StaticResource StatusToColorConverter}}"
                   HorizontalAlignment="Center"
                   VerticalAlignment="Center"
                   FontWeight="Bold"/>
        </DataTemplate>
    </Window.Resources>

    <DockPanel>
        <DockPanel DockPanel.Dock="Top" Background="#181A1B" Height="50">
            <Button Style="{StaticResource SideMenuButton}" Click="LogoutButton_Click" Content="Logout"></Button>
            <TextBlock DockPanel.Dock="Top" Text="SMART INVENTORY TRACKER" 
                       Foreground="White" FontSize="22" FontWeight="Bold" 
                       HorizontalAlignment="Center" Margin="0 10 0 10"/>
        </DockPanel>
            <!-- Bočni meni -->
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="*"></RowDefinition>
                <RowDefinition Height="5"></RowDefinition>
                <RowDefinition Height="*"></RowDefinition>
            </Grid.RowDefinitions>
            <StackPanel Grid.Row="0" DockPanel.Dock="Left" Width="200" VerticalAlignment="Center">
                <Button x:Name="ProductsButton" Click="ProductsButton_Click" Style="{StaticResource SideMenuButton}" Content="Products"/>
                <Button x:Name="CategoriesButton" Click="CategoriesButton_Click" Style="{StaticResource SideMenuButton}" Content="Categories"/>
                <Button x:Name="SuppliersButton" Click="SuppliersButton_Click" Style="{StaticResource SideMenuButton}" Content="Suppliers"/>
                <Button x:Name="LogsButton" Click="LogsButton_Click" Style="{StaticResource SideMenuButton}" Content="Logs"/>
                <Button x:Name="UsersButton" Click="UsersButton_Click" Visibility="Hidden" Style="{StaticResource SideMenuButton}" Content="Users"/>
            </StackPanel>
            <Border Grid.Row="1" Margin="13, 0" Background="Gray" BorderThickness="2"/>
            <StackPanel Grid.Row="2" DockPanel.Dock="Left" Width="200" x:Name="FilterStackPanel">
                <TextBlock Text="Filter" Foreground="White" FontWeight="Bold" FontSize="20" Margin="30, 0" HorizontalAlignment="Center"/>
                <TextBlock x:Name="FirstFilterTextBlock" Text="Category" Foreground="White" FontWeight="Bold" FontSize="14" Margin="20, 10, 0, 5" HorizontalAlignment="Left"/>
                <ComboBox Width="170" HorizontalAlignment="Center" Background="#242526" x:Name="CategoryComboBox">
                    <ComboBox.Style>
                        <Style TargetType="ComboBox">
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="ComboBox">
                                        <Grid>
                                            <ToggleButton Name="ToggleButton" 
                                                        Background="#242526"
                                                        BorderBrush="#242526"
                                                        Focusable="false"
                                                        IsChecked="{Binding Path=IsDropDownOpen, Mode=TwoWay, RelativeSource={RelativeSource TemplatedParent}}"
                                                        ClickMode="Press">
                                                <ToggleButton.Template>
                                                    <ControlTemplate TargetType="ToggleButton">
                                                        <Grid>
                                                            <Grid.ColumnDefinitions>
                                                                <ColumnDefinition />
                                                                <ColumnDefinition Width="20" />
                                                            </Grid.ColumnDefinitions>
                                                            <Border x:Name="Border" 
                                                                  Grid.ColumnSpan="2"
                                                                  Background="#242526"
                                                                  BorderBrush="#242526"
                                                                  BorderThickness="1" />
                                                            <Path x:Name="Arrow"
                                                                    Grid.Column="1"     
                                                                    Fill="White"
                                                                    HorizontalAlignment="Center"
                                                                    VerticalAlignment="Center"
                                                                    Data="M 0 0 L 4 4 L 8 0 Z"/>
                                                        </Grid>
                                                        <ControlTemplate.Triggers>
                                                            <Trigger Property="IsMouseOver" Value="true">
                                                                <Setter TargetName="Border" Property="Background" Value="#242526"/>
                                                            </Trigger>
                                                            <Trigger Property="IsPressed" Value="true">
                                                                <Setter TargetName="Border" Property="Background" Value="#242526"/>
                                                            </Trigger>
                                                        </ControlTemplate.Triggers>
                                                    </ControlTemplate>
                                                </ToggleButton.Template>
                                            </ToggleButton>
                                            <ContentPresenter Name="ContentSite" 
                                                            IsHitTestVisible="False" 
                                                            Content="{TemplateBinding SelectionBoxItem}"
                                                            ContentTemplate="{TemplateBinding SelectionBoxItemTemplate}"
                                                            ContentTemplateSelector="{TemplateBinding ItemTemplateSelector}"
                                                            Margin="3,3,23,3"
                                                            VerticalAlignment="Center"
                                                            HorizontalAlignment="Left" />
                                            <TextBox x:Name="PART_EditableTextBox"
                                                   Style="{x:Null}" 
                                                   HorizontalAlignment="Left" 
                                                   VerticalAlignment="Center" 
                                                   Margin="3,3,23,3"
                                                   Focusable="True" 
                                                   Background="Transparent"
                                                   Foreground="White"
                                                   Visibility="Hidden"
                                                   IsReadOnly="{TemplateBinding IsReadOnly}"/>
                                            <Popup Name="Popup"
                                                     Placement="Bottom"
                                                     IsOpen="{TemplateBinding IsDropDownOpen}"
                                                     AllowsTransparency="True" 
                                                     Focusable="False"
                                                     PopupAnimation="Slide">
                                                <Grid Name="DropDown"
                                                        SnapsToDevicePixels="True"                
                                                        MinWidth="{TemplateBinding ActualWidth}"
                                                        MaxHeight="{TemplateBinding MaxDropDownHeight}">
                                                    <Border x:Name="DropDownBorder"
                                                              Background="#242526" 
                                                              BorderThickness="1"
                                                              BorderBrush="#666"/>
                                                    <ScrollViewer Margin="4,6,4,6" SnapsToDevicePixels="True">
                                                        <StackPanel IsItemsHost="True" KeyboardNavigation.DirectionalNavigation="Contained" />
                                                    </ScrollViewer>
                                                </Grid>
                                            </Popup>
                                        </Grid>
                                        <ControlTemplate.Triggers>
                                            <Trigger Property="HasItems" Value="false">
                                                <Setter TargetName="DropDownBorder" Property="MinHeight" Value="95"/>
                                            </Trigger>
                                            <Trigger Property="IsGrouping" Value="true">
                                                <Setter Property="ScrollViewer.CanContentScroll" Value="false"/>
                                            </Trigger>
                                            <Trigger Property="IsEditable" Value="true">
                                                <Setter Property="IsTabStop" Value="false"/>
                                                <Setter TargetName="PART_EditableTextBox" Property="Visibility" Value="Visible"/>
                                                <Setter TargetName="ContentSite" Property="Visibility" Value="Hidden"/>
                                            </Trigger>
                                        </ControlTemplate.Triggers>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                            <Setter Property="Foreground" Value="White"/>
                        </Style>
                    </ComboBox.Style>
                    <ComboBox.ItemContainerStyle>
                        <Style TargetType="ComboBoxItem">
                            <Setter Property="Background" Value="#242526"/>
                            <Setter Property="Foreground" Value="White"/>
                            <Setter Property="FontWeight" Value="Bold"/>
                            <Setter Property="HorizontalContentAlignment" Value="Center"/>
                        </Style>
                    </ComboBox.ItemContainerStyle>
                    <ComboBoxItem Content="All"/>
                </ComboBox>
                
                <TextBlock x:Name="SecondFilterTextBlock" Text="Supplier" Foreground="White" FontWeight="Bold" FontSize="14" Margin="20, 10, 0, 5" HorizontalAlignment="Left"/>
                <ComboBox Width="170" HorizontalAlignment="Center" Background="#242526" x:Name="SupplierComboBox">
                    <ComboBox.Style>
                        <Style TargetType="ComboBox">
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="ComboBox">
                                        <Grid>
                                            <ToggleButton Name="ToggleButton" 
                                                        Background="#242526"
                                                        BorderBrush="#242526"
                                                        Focusable="false"
                                                        IsChecked="{Binding Path=IsDropDownOpen, Mode=TwoWay, RelativeSource={RelativeSource TemplatedParent}}"
                                                        ClickMode="Press">
                                                <ToggleButton.Template>
                                                    <ControlTemplate TargetType="ToggleButton">
                                                        <Grid>
                                                            <Grid.ColumnDefinitions>
                                                                <ColumnDefinition />
                                                                <ColumnDefinition Width="20" />
                                                            </Grid.ColumnDefinitions>
                                                            <Border x:Name="Border" 
                                                                  Grid.ColumnSpan="2"
                                                                  Background="#242526"
                                                                  BorderBrush="#242526"
                                                                  BorderThickness="1" />
                                                            <Path x:Name="Arrow"
                                                                Grid.Column="1"     
                                                                Fill="White"
                                                                HorizontalAlignment="Center"
                                                                VerticalAlignment="Center"
                                                                Data="M 0 0 L 4 4 L 8 0 Z"/>
                                                        </Grid>
                                                        <ControlTemplate.Triggers>
                                                            <Trigger Property="IsMouseOver" Value="true">
                                                                <Setter TargetName="Border" Property="Background" Value="#242526"/>
                                                            </Trigger>
                                                            <Trigger Property="IsPressed" Value="true">
                                                                <Setter TargetName="Border" Property="Background" Value="#242526"/>
                                                            </Trigger>
                                                        </ControlTemplate.Triggers>
                                                    </ControlTemplate>
                                                </ToggleButton.Template>
                                            </ToggleButton>
                                            <ContentPresenter Name="ContentSite" 
                                                            IsHitTestVisible="False" 
                                                            Content="{TemplateBinding SelectionBoxItem}"
                                                            ContentTemplate="{TemplateBinding SelectionBoxItemTemplate}"
                                                            ContentTemplateSelector="{TemplateBinding ItemTemplateSelector}"
                                                            Margin="3,3,23,3"
                                                            VerticalAlignment="Center"
                                                            HorizontalAlignment="Left" />
                                            <TextBox x:Name="PART_EditableTextBox"
                                                       Style="{x:Null}" 
                                                       HorizontalAlignment="Left" 
                                                       VerticalAlignment="Center" 
                                                       Margin="3,3,23,3"
                                                       Focusable="True" 
                                                       Background="Transparent"
                                                       Foreground="White"
                                                       Visibility="Hidden"
                                                       IsReadOnly="{TemplateBinding IsReadOnly}"/>
                                            <Popup Name="Popup"
                                                    Placement="Bottom"
                                                    IsOpen="{TemplateBinding IsDropDownOpen}"
                                                    AllowsTransparency="True" 
                                                    Focusable="False"
                                                    PopupAnimation="Slide">
                                                <Grid Name="DropDown"
                                                    SnapsToDevicePixels="True"                
                                                    MinWidth="{TemplateBinding ActualWidth}"
                                                    MaxHeight="{TemplateBinding MaxDropDownHeight}">
                                                    <Border x:Name="DropDownBorder"
                                                      Background="#242526" 
                                                      BorderThickness="1"
                                                      BorderBrush="#666"/>
                                                    <ScrollViewer Margin="4,6,4,6" SnapsToDevicePixels="True">
                                                        <StackPanel IsItemsHost="True" KeyboardNavigation.DirectionalNavigation="Contained" />
                                                    </ScrollViewer>
                                                </Grid>
                                            </Popup>
                                        </Grid>
                                        <ControlTemplate.Triggers>
                                            <Trigger Property="HasItems" Value="false">
                                                <Setter TargetName="DropDownBorder" Property="MinHeight" Value="95"/>
                                            </Trigger>
                                            <Trigger Property="IsGrouping" Value="true">
                                                <Setter Property="ScrollViewer.CanContentScroll" Value="false"/>
                                            </Trigger>
                                            <Trigger Property="IsEditable" Value="true">
                                                <Setter Property="IsTabStop" Value="false"/>
                                                <Setter TargetName="PART_EditableTextBox" Property="Visibility" Value="Visible"/>
                                                <Setter TargetName="ContentSite" Property="Visibility" Value="Hidden"/>
                                            </Trigger>
                                        </ControlTemplate.Triggers>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                            <Setter Property="Foreground" Value="White"/>
                        </Style>
                    </ComboBox.Style>
                    <ComboBox.ItemContainerStyle>
                        <Style TargetType="ComboBoxItem">
                            <Setter Property="Background" Value="#242526"/>
                            <Setter Property="Foreground" Value="White"/>
                            <Setter Property="FontWeight" Value="Bold"/>
                            <Setter Property="HorizontalContentAlignment" Value="Center"/>
                        </Style>
                    </ComboBox.ItemContainerStyle>
                    <ComboBoxItem Content="All"/>
                </ComboBox>
            </StackPanel>
        </Grid>

        <!-- Glavni sadržaj -->
        <DockPanel Margin="10">
            <!-- Naslov -->

            <!-- Pretraga i filter -->
            <StackPanel DockPanel.Dock="Top" Orientation="Horizontal" Margin="0 0 0 10">
                <TextBox Width="300" Style="{StaticResource SearchBox}" x:Name="SearchTextBox" Text="{Binding SearchQuery, UpdateSourceTrigger=PropertyChanged}"/>
                <Button Content="Search" Background="#242526" Foreground="White" 
                        Margin="10 0" Padding="15,5" BorderThickness="0" Click="SearchButton_Click" />
            </StackPanel>

            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition></RowDefinition>
                    <RowDefinition></RowDefinition>
                </Grid.RowDefinitions>

                <!-- Tabela -->
                <DataGrid x:Name="ItemTable" Grid.Row="0" AutoGenerateColumns="False" CanUserAddRows="False"
                      RowBackground="#181A1B"
                      AlternatingRowBackground="#181A1B"
                      IsReadOnly="True"
                      Background="Transparent"
                      Foreground="White" SelectionChanged="DataGrid_SelectionChanged">

                    <DataGrid.Resources>
                        <!-- Override sistemskih boja za selekciju -->
                        <SolidColorBrush x:Key="{x:Static SystemColors.HighlightBrushKey}" Color="#5865F2"/>
                        <SolidColorBrush x:Key="{x:Static SystemColors.HighlightTextBrushKey}" Color="White"/>
                        <SolidColorBrush x:Key="{x:Static SystemColors.InactiveSelectionHighlightBrushKey}" Color="#404348"/>
                        <SolidColorBrush x:Key="{x:Static SystemColors.InactiveSelectionHighlightTextBrushKey}" Color="White"/>
                    </DataGrid.Resources>

                    <!--<DataGrid.RowStyle>
                        <Style TargetType="DataGridRow">
                            <Setter Property="Background" Value="#181A1B"/>
                            <Setter Property="Foreground" Value="White"/>
                            <Setter Property="FocusVisualStyle" Value="{x:Null}"/>
                            <Style.Triggers>
                                <Trigger Property="IsSelected" Value="True">
                                    <Setter Property="Background" Value="#5865F2"/>
                                    <Setter Property="Foreground" Value="White"/>
                                </Trigger>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Background" Value="#2F3136"/>
                                </Trigger>
                                <MultiTrigger>
                                    <MultiTrigger.Conditions>
                                        <Condition Property="IsSelected" Value="True"/>
                                        <Condition Property="IsMouseOver" Value="True"/>
                                    </MultiTrigger.Conditions>
                                    <Setter Property="Background" Value="#6B73FF"/>
                                </MultiTrigger>
                            </Style.Triggers>
                        </Style>
                    </DataGrid.RowStyle>
                    <DataGrid.CellStyle>
                        <Style TargetType="DataGridCell">
                            <Setter Property="Background" Value="#181A1B"/>
                            <Setter Property="Foreground" Value="White"/>
                            <Setter Property="FontWeight" Value="Bold"/>
                            <Setter Property="BorderThickness" Value="0"/>
                            <Setter Property="BorderBrush" Value="#313338"/>
                        </Style>
                    </DataGrid.CellStyle>-->
                    <DataGrid.ColumnHeaderStyle>
                        <Style TargetType="DataGridColumnHeader">
                            <Setter Property="Background" Value="#23272A"/>
                            <Setter Property="Foreground" Value="White"/>
                            <Setter Property="FontWeight" Value="Bold"/>
                        </Style>
                    </DataGrid.ColumnHeaderStyle>
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="Product sadfsa Name" Binding="{Binding Name}" Width="*"/>
                        <DataGridTextColumn Header="Product Code" Binding="{Binding ProductCode}" Width="200"/>
                        <DataGridTextColumn Header="Category" Binding="{Binding Category.Name}" Width="200"/>
                        <DataGridTextColumn Header="Supplier" Binding="{Binding Supplier.Name}" Width="200"/>
                        <DataGridTextColumn Header="Quantity" Binding="{Binding Quantity}" Width="100"/>
                        <DataGridTextColumn Header="Min Stock" Binding="{Binding MinimumStock}" Width="100"/>
                        <DataGridTextColumn Header="Status" Binding="{Binding Status}" Width="150"/>
                    </DataGrid.Columns>
                </DataGrid>

                <!-- Donji panel -->
                <StackPanel Grid.Row=" 1" DockPanel.Dock="Bottom" Margin="0 10 0 0">
                    <Border x:Name="LowStockAlert" CornerRadius="10" Margin="100, 20" Background="#23272A">
                        <DockPanel>
                            <TextBlock DockPanel.Dock="Left" Margin ="30, 10, 10, 10" TextAlignment="Center" Text="Low Stock" Foreground="Red" FontWeight="Bold"/>
                            <TextBlock x:Name="LowStockText" Foreground="White" MinWidth="400" HorizontalAlignment="Center" Margin ="250, 10, 10, 10" FontWeight="Bold" TextAlignment="Center"/>
                            <Button x:Name="LowStockShow" Click="ShowButton_Click" Style="{StaticResource LowStockButton}" Content="Show" Foreground="White" Background="Transparent" BorderThickness="0" Width="70" Margin ="90, 10, 10, 10" FontWeight="Bold"/>
                            <Button x:Name="LowStockClear" Click="ClearButtin_Click" Style="{StaticResource LowStockButton}" Content="Clear" Foreground="White" Background="Transparent" BorderThickness="0" Width="70" DockPanel.Dock="Right" Margin ="0, 10, 10, 10" FontWeight="Bold"/>
                        </DockPanel>
                    </Border>
                    <StackPanel Orientation="Horizontal" Margin="0 25 0 0">
                        <Button x:Name="AddButton" Click="AddButton_Click" Style="{StaticResource ActionButton}"/>
                        <Button x:Name="RemoveButton" Click="RemoveButton_Click" Style="{StaticResource ActionButton}"/>
                        <Button x:Name="EditButton" Click="EditButton_Click" Style="{StaticResource ActionButton}"/>
                        <Button x:Name="RestockButton" Click="RestockButton_Click" Style="{StaticResource ActionButton}"/>
                        <Button x:Name="QRCodeButton" Content="Generate QR Code" Click="QRCodeButton_Click" Style="{StaticResource ActionButton}"/>
                    </StackPanel>
                </StackPanel>

            </Grid>
        </DockPanel>
    </DockPanel>
</Window>
